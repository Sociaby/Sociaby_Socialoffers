  </frontend>
  <global>
    <helpers>
      <socialoffers>
        <class>Sociaby_Socialoffers_Helper</class>
      </socialoffers>
    </helpers>
  	<blocks>
  	  <socialoffers>
  		  <class>Sociaby_Socialoffers_Block</class>
  	  </socialoffers>
  	</blocks>    
  </global>
